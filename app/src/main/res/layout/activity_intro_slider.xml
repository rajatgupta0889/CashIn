<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="match_parent" android:background="@color/intro_slider_one"

    tools:context="com.mantralabsglobal.cashin.ui.activity.app.IntroSliderActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_weight="15"
        android:layout_width="match_parent" android:paddingLeft="20dp" android:paddingRight="20dp"
        android:layout_height="0dp" android:background="@color/intro_slider_one"  android:padding="@dimen/margin_outside_sign_in">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="bottom|center"
        android:layout_weight="1"
        android:layout_marginBottom="10dp">

        <ImageView android:id="@+id/view_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:src="@drawable/page_indicator_dot_selected" android:layout_margin="7dp" />

        <ImageView android:id="@+id/view_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:src="@drawable/page_indicator_dot"  android:layout_margin="7dp"  />

        <ImageView android:id="@+id/view_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:src="@drawable/page_indicator_dot"  android:layout_margin="7dp"  />

        <ImageView android:id="@+id/view_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:src="@drawable/page_indicator_dot"  android:layout_margin="7dp"  />


    </LinearLayout>
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:gravity="center" >

        <LinearLayout android:orientation="horizontal" android:id="@+id/gplus_sign_in_button" android:paddingLeft="@dimen/margin_outside_sign_in" android:paddingRight="@dimen/margin_outside_sign_in" android:layout_marginBottom="@dimen/margin_below_sign_in"  android:layout_width="fill_parent" android:layout_height="@dimen/sign_in_button_component_height" android:visibility="invisible">
            <ImageView android:background="@drawable/sign_up_button_component_selector" android:duplicateParentState="true" android:layout_width="@dimen/sign_in_button_component_height" android:layout_height="fill_parent" android:src="@drawable/google_icon" android:scaleType="centerInside" android:contentDescription="@string/description_image" />
            <TextView android:paddingLeft="@dimen/margin_outside" android:duplicateParentState="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/default_border" android:text="@string/sign_in_with_google" style="@style/sign_up_button_component" android:gravity="center"/>
        </LinearLayout>
        
        <!--<com.google.android.gms.common.SignInButton
            android:id="@+id/gplus_sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  />-->

    </LinearLayout>

</LinearLayout>
