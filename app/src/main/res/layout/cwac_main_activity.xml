<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.mantralabsglobal.cashin.ui.activity.camera.CwacCameraActivity"
    tools:ignore="MergeRootFrame"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        style="@style/Widget.CashIn.ActionBar.Camera"
        >
        <!--<TextView android:id="@+id/text_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:gravity="bottom|center_horizontal"
            android:text="Camera test long sentence for checking on nexus 6"
            android:layout_gravity="center_horizontal" />-->

    </android.support.v7.widget.Toolbar>

    <ImageButton android:id="@+id/take_picture_button"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:src="@drawable/ic_action_camera_icon" android:background="@color/transparent" />

    <ImageButton android:id="@+id/flash_button"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:src="@drawable/ic_action_flash_off" android:background="@color/transparent"
        android:layout_marginRight="20dp" />

    <ImageButton android:id="@+id/flip_camera_button"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:src="@drawable/ic_action_back_camera" android:background="@color/transparent"
        android:layout_marginLeft="20dp" />

</FrameLayout>