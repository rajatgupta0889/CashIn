<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/rl_custom_view">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:scaleType="center" android:layout_gravity="center"  android:src="@drawable/ic_calender" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical">
        <TextView
            android:id="@+id/tv_dob"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1" android:text="@string/date_of_birth"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="2"
            >

            <EditText android:tag="et_dob"
                android:focusable="false"
                android:layout_weight="2"
                android:layout_width="0dp" android:layout_height="match_parent"
                style="?android:attr/spinnerStyle"
                android:width="0dp" />
            <TextView
                android:tag="tv_age"
                android:layout_marginStart="20dp"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>