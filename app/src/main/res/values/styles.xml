<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:spinnerStyle">@style/spinner_style</item>
        <item name="donut_text_size">10dp</item>
        <item name="donut_finished_color">@color/light</item>
        <item name="donut_finished_stroke_width">2dp</item>
        <item name="donut_unfinished_stroke_width">2dp</item>
        <item name="donut_text_color">@color/light</item>
    </style>

    <style name="AppTheme.Form"></style>

    <style name="AppTheme.Form.Header" parent="android:TextAppearance.DeviceDefault.Large"/>

    <style name="AppTheme.Form.Fragment.Top" parent="AppTheme.Form.Header">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.Form.Fragment.Bottom" parent="AppTheme.Form.Header">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.Form.Fragment.Bottom.Text">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/form_header_margin_top_text</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppTheme.Form.Fragment.Bottom.Button">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/text_padding_medium</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:drawableRight">@drawable/ic_action_arrow</item>
    </style>

    <style name="AppTheme.Form.Fragment.Top.Header" parent="AppTheme.Form.Header">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/for_header_margin_bottom</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppTheme.Form.Fragment.Top.Image" parent="AppTheme.Form.Header">
        <item name="android:layout_width">@dimen/form_header_image_width</item>
        <item name="android:layout_height">@dimen/form_header_image_height</item>
        <item name="android:background">@drawable/round_button_blue</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.Form.Fragment.Seperator" parent="AppTheme.Form.Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/form_fragment_seperator_height</item>
        <item name="android:background">@drawable/gradient_seperator</item>
        <item name="android:layout_marginBottom">@dimen/form_fragment_seperator_margin_bottom</item>
    </style>

    <style name="AppTheme.Form.Fragment.Seperator.NoGradient">
        <item name="android:background">@color/seperator_center</item>
        <item name="android:layout_marginBottom">@dimen/form_fragment_input_seperator</item>
        <item name="android:layout_marginTop">@dimen/form_fragment_input_seperator</item>
    </style>

    <style name="AppTheme.Form.Header.Inverse" parent="android:TextAppearance.DeviceDefault.Large.Inverse">

    </style>

    <style name="AppTheme.Intro" parent="Theme.AppCompat.Light.NoActionBar"/>
    <style name="AppTheme.Intro.Header" parent="AppTheme.Form.Header.Inverse">
        <item name="android:textSize">@dimen/text_size_large_intro</item>
    </style>

    <style name="AppTheme.Intro.Image" >
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">50dp</item>
    </style>

    <style name="loginTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/light</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="android:editTextStyle">@style/Login_EditTextStyle</item>
        <item name="android:textViewStyle">@style/Login_TextViewStyle</item>
    </style>

    <style name="spinner_style" parent="Base.Widget.AppCompat.Spinner.Underlined"/>

    <style name="LoginFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="primary_nav_button" parent="android:Widget.DeviceDefault.Button">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    <style name="Login_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/light</item>
        <item name="android:layout_height">45dip</item>
    </style>
    <style name="Login_TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/light</item>
        <item name="android:layout_height">45dip</item>
    </style>

    <style name="AppOverlayTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle.Transparent.TitleTextStyle</item>

        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="ActionBarStyle.Transparent.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.CashIn.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="theme">@style/ThemeOverlay.CashIn.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Widget.CashIn.ActionBar.Camera">
        <item name="android:background">@color/translucentBlue</item>
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:textColorSecondary">@color/primary</item>
        <item name="android:actionMenuTextColor">@color/primary</item>
        <item name="android:titleTextStyle">@style/Widget.CashIn.ActionBar.Camera.Text</item>
    </style>

    <style name="Widget.CashIn.ActionBar.Camera.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="ThemeOverlay.CashIn.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/light</item>
    </style>

    <style name="text_medium_white_nl">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/white_max</item>
    </style>
    <style name="text_medium_blue_nl">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="sign_up_button_component" parent="@style/text_medium_white_nl">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/sign_up_button_component_selector</item>
    </style>

    <style name="get_started_button_component" parent="@style/text_medium_blue_nl">
        <item name="android:background">@drawable/get_started_button_component_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="text_large_white_nl">
        <item name="android:textSize">@dimen/text_size_large_intro</item>
        <item name="android:textColor">@color/white_max</item>
    </style>

    <style name="text_medium_nl">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="text_large_white_gs" parent="text_large_white_nl">
        <item name="android:padding">@dimen/text_padding_large</item>
    </style>

    <style name="text_medium_gs" parent="text_medium_nl">
        <item name="android:padding">@dimen/text_padding_medium</item>
    </style>

    <style name="text_medium_input_header" parent="text_medium_nl">
        <item name="android:padding">@dimen/text_padding_medium</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>


    <style name="text_medium_white_gs" parent="text_medium_white_nl">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:padding">@dimen/text_padding_medium</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
    <style name="CWACCameraBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="CWACCameraTheme" parent="CWACCameraBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <dimen name="form_fragment_input_seperator">10dp</dimen>
</resources>
